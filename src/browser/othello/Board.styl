@import '../common/Group'

.bordered
  border-style solid
  border-color grey
  border-width 0


.othello-board

  .othello-row
    @extend .group:after

    &:nth-of-type(1)
      @extend .bordered
      border-top-width 1px


    .othello-tile
      @extend .bordered
      border-width 0 1px 1px 0
      &:nth-of-type(1)
        border-left-width 1px

      float left
      width 50px
      height 50px

      .piece
        height 40px
        width 40px
        border-radius 50%
        margin 5px

        &.red
          background-color red
        &.blue
          background-color blue
